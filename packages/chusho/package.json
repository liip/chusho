{
  "name": "chusho",
  "version": "0.1.0-alpha.6",
  "description": "A library of bare accessible Vue components and tools.",
  "author": {
    "name": "Liip",
    "url": "https://www.liip.ch/"
  },
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "start-server-and-test start http://localhost:6006 test:e2e:headless",
    "build:watch": "npm run build -- -w",
    "prepublishOnly": "npm run build",
    "start": "npm run storybook:serve",
    "storybook:build": "vue-cli-service storybook:build -c config/storybook -s public -o docs --docs",
    "storybook:build:debug": "npm run storybook:build -- --debug-webpack",
    "storybook:serve": "vue-cli-service storybook:serve -p 6006 -c config/storybook -s public --ci",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e:dev": "vue-cli-service test:e2e --url http://localhost:6006",
    "test:e2e:headless": "npm run test:e2e:dev -- --headless",
    "test:unit:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:unit:dev": "vue-cli-service test:unit --watch"
  },
  "main": "dist/chusho.js",
  "module": "dist/chusho.module.js",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@storybook/addon-a11y": "^6.0.21",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/vue": "^6.0.21",
    "@types/jest": "^24.0.19",
    "@vue/cli-plugin-babel": "^4.5.4",
    "@vue/cli-plugin-e2e-cypress": "^4.5.4",
    "@vue/cli-plugin-typescript": "^4.5.4",
    "@vue/cli-plugin-unit-jest": "^4.5.4",
    "@vue/cli-service": "^4.5.4",
    "@vue/composition-api": "^1.0.0-beta.11",
    "@vue/test-utils": "^2.0.0-beta.6",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "start-server-and-test": "^1.11.3",
    "storybook-vue-router": "^1.0.7",
    "typescript": "^4.0.2",
    "vue-cli-plugin-storybook": "^1.3.0",
    "vue-cli-plugin-tailwind": "^1.4.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "vue": "^3.0.2",
    "vue-router": "^4.0.0-rc.1"
  },
  "peerDependencies": {
    "vue": "3.x"
  },
  "bugs": {
    "url": "https://github.com/liip/chusho/issues"
  },
  "homepage": "https://www.chusho.dev/",
  "keywords": [
    "vue",
    "components",
    "accessibility",
    "wcag"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liip/chusho.git",
    "directory": "packages/chusho"
  },
  "sideEffects": false,
  "typings": "dist/chusho.d.ts",
  "umd:main": "dist/chusho.umd.js"
}
