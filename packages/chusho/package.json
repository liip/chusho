{
  "name": "chusho",
  "version": "0.3.0",
  "description": "A library of bare accessible Vue components and tools.",
  "author": {
    "name": "Liip",
    "url": "https://www.liip.ch/"
  },
  "scripts": {
    "start": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build",
    "build:types": "tsc -p tsconfig.json --declaration --emitDeclarationOnly",
    "prepublishOnly": "npm run build",
    "test": "npm run test:unit -- --coverage && npm run test:e2e",
    "test:unit": "jest",
    "test:unit:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:unit:dev": "npm run test:unit -- --watch",
    "test:e2e": "start-server-and-test start http-get://localhost:3000 test:e2e:headless",
    "test:e2e:dev": "cypress open",
    "test:e2e:headless": "cypress run --headless"
  },
  "main": "dist/chusho.cjs.js",
  "module": "dist/esm/chusho.js",
  "umd:main": "dist/chusho.umd.js",
  "types": "dist/types/chusho.d.ts",
  "jsdelivr": "dist/chusho.umd.js",
  "unpkg": "dist/chusho.umd.js",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.4",
    "@babel/preset-env": "^7.16.11",
    "@types/jest": "^27.4.0",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/test-utils": "^2.0.0-rc.18",
    "autoprefixer": "^10.4.2",
    "babel-jest": "^27.5.1",
    "core-js": "^3.21.0",
    "cypress": "^9.4.1",
    "cypress-plugin-tab": "^1.0.5",
    "highlight.js": "^10.7.3",
    "jest": "^27.5.1",
    "lodash": "^4.17.21",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.18",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "vee-validate": "^4.5.8",
    "vite": "^2.7.13",
    "vue": "^3.2.29",
    "vue-router": "^4.0.12"
  },
  "peerDependencies": {
    "vue": "3.x"
  },
  "bugs": {
    "url": "https://github.com/liip/chusho/issues"
  },
  "homepage": "https://www.chusho.dev/",
  "keywords": [
    "vue",
    "components",
    "accessibility",
    "wcag"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liip/chusho.git",
    "directory": "packages/chusho"
  },
  "sideEffects": false
}
